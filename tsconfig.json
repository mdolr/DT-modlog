{
  "compilerOptions": {
    "lib": ["es5", "es6", "es7", "es2015", "es2016", "es2017", "es2018", "esnext"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true
  }
}
